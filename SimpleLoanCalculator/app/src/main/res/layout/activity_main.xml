<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="40dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คำนวนสินเชื่อ"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/titleapp"
        android:text="จำนวนเงินที่ขอกู้(บาท)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtmoney"
        android:layout_below="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1000"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/title2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edtmoney"
        android:text="อัตราดอกเบี้ย(%ต่อปี)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtloan"
        android:layout_below="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="5"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/title3"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edtloan"
        android:text="ระยะเวลาที่ขอกู้(ปี)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtyear"
        android:layout_below="@+id/title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="2"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/Btcal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="คำนวณ"
        android:layout_below="@+id/edtyear"
        android:backgroundTint="@color/teal_700"
        />

    <Button
        android:id="@+id/Btsuggest"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*สินเชื้อแนะนำ"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:backgroundTint="@color/design_default_color_secondary"
        />





</RelativeLayout>